<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="body"
            type="com.moon.beautygirlkotlin.my_favorite.model.MyFavoriteBody" />

        <variable
            name="itemClick"
            type="com.moon.beautygirlkotlin.listener.ItemClick" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/bg_card"
        android:clickable="true"
        android:onClick="@{(view) -> itemClick.onClick(view , body)}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            bind:imageUrl="@{body.url}" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="@{body.title}"
            android:textColor="@color/font_normal"
            android:textSize="14sp"
            tools:text="标题" />
    </LinearLayout>

</layout>


